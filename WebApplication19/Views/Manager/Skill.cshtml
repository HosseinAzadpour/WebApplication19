
@{
    ViewData["Title"] = "Skill";
    Layout = "~/Views/Shared/_Layout_Mng_Edit_Skill.cshtml";
}
@model Skill_ViewModels

<div class="container">
    <form asp-action="Delete_Skill" asp-controller="Manager">
        <div class="section-title">
        <h2>Skills</h2>

    </div>
    <div class="row" style="font-size:28px;color:darkred">

        @{
            foreach (var item in ViewData["SkillList"] as List<Skill>)
            {

                
                    switch (item.Id)
                    {
                        case < 50:
                            <div class="col-lg-4">
                                <ul>
                                <li><input type="checkbox" name="DeleteSkillIds" value="@item.Id" style="margin-right:10px;" /><label role="none" class="@item.SkillIcon">@item.SkillName</label></li>
                                </ul>
                            </div>
                            break;
                        default:
                            break;
                    }

                }

            }  

     </div>
    <button value="DeleteSkillIds" class="btn" style="margin-left:30px ;margin-top:100px;">-Remove Skills</button>
    </form>
</div>
<div class="container" style="margin-top:30px;">
    <form asp-action="Add_Skill" asp-controller="Manager">
        <input placeholder="Enter Skill IconCode" name="SkillIcon" asp-for="SkillIcon" autofocus autocomplete="off"/>
        <input placeholder="Enter Skill Name" name="SkillName" asp-for="SkillName" autocomplete="off" />
<button class="btn btn-success" >+Add Skill</button>
    </form>
</div>

     
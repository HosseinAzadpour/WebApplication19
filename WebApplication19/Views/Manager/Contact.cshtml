
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout_Mng_Edit_Contact.cshtml";
}
@model Contact_ViewModels

@{
    foreach (var item in ViewData["ContactList"] as List<Contact>)
    {
        <form asp-action="Update_Contact" asp-controller="Manager">
            <div class="container" >

            <div class="section-title">
                <h2>Contact</h2>
            </div>

            <div class="row" data-aos="fade-in">

                <div class="col-lg-5 d-flex align-items-stretch">
                    <div class="info">
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Location:</h4>
                            <input value="@item.Location" asp-for="Location" autocomplete="off"/>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                                <input value="@item.MyEmail" asp-for="MyEmail" autocomplete="off" />
                        </div>

                        <div class="phone">
                            <i class="bi bi-phone"></i>
                            <h4>Call:</h4>
                                <input value="@item.Call" asp-for="Call" autocomplete="off" />
                        </div>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d221880.46861860607!2d52.39026968527541!3d29.665188988194107!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3fb20d0c8c85f2e3%3A0x6d0c5b8aef6b4cf6!2sShiraz%2C%20Fars%20Province%2C%20Iran!5e0!3m2!1sen!2s!4v1673964574617!5m2!1sen!2s" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        <input value="@item.Id" type="hidden" name="id" />
                            <button class="btn col-lg-6" value="@item.Id">Save Changes</button>

                    </div>
                </div>
            </div>

        </div>
        </form>
    }
    }

